# ScamShield AI - Environment Configuration
# Copy this file to .env and modify as needed

# ============================================================================
# APP CONFIGURATION
# ============================================================================
APP_NAME=ScamShield AI
VERSION=3.0.0
HOST=0.0.0.0
PORT=8000
LOG_LEVEL=INFO

# ============================================================================
# CORS CONFIGURATION
# ============================================================================
# Comma-separated list of allowed origins
# Use * for development, specific URLs for production
ALLOWED_ORIGINS=*
# ALLOWED_ORIGINS=https://yourdomain.com,https://app.yourdomain.com

# ============================================================================
# FEATURE FLAGS
# ============================================================================
# Enable/Disable features without code changes

# ML Detection (requires scikit-learn)
ENABLE_ML=true

# Analytics & Threat Intelligence
ENABLE_ANALYTICS=true

# Screenshot Fake Detection
ENABLE_SCREENSHOT_DETECTION=true

# ============================================================================
# ML CONFIGURATION
# ============================================================================
# Model type: random_forest | logistic_regression
ML_MODEL_TYPE=random_forest

# Path to saved model file
ML_MODEL_PATH=models/scam_detector.pkl

# Hybrid classification weights (must sum to ~1.0)
ML_WEIGHT=0.65
RULE_WEIGHT=0.35

# ============================================================================
# DETECTION THRESHOLDS
# ============================================================================
# Score thresholds for classification (0.0 - 1.0)
SCAM_THRESHOLD=0.75
SUSPICIOUS_THRESHOLD=0.45

# ============================================================================
# LIMITS
# ============================================================================
# Maximum message length in characters
MAX_MESSAGE_LENGTH=5000

# ============================================================================
# PATHS
# ============================================================================
# Path to rules configuration (JSON)
RULES_PATH=detection/rules.json

# ============================================================================
# DATABASE (for future use)
# ============================================================================
# SQLite (development)
DATABASE_URL=sqlite:///./scamshield.db

# PostgreSQL (production)
# DATABASE_URL=postgresql://user:password@localhost:5432/scamshield

# ============================================================================
# DEPLOYMENT PRESETS
# ============================================================================

# Preset 1: Full Features (Production)
# ENABLE_ML=true
# ENABLE_ANALYTICS=true
# ENABLE_SCREENSHOT_DETECTION=true
# ML_WEIGHT=0.65
# RULE_WEIGHT=0.35

# Preset 2: Rules Only (Minimal)
# ENABLE_ML=false
# ENABLE_ANALYTICS=false
# ENABLE_SCREENSHOT_DETECTION=false

# Preset 3: ML Focus (Research)
# ENABLE_ML=true
# ENABLE_ANALYTICS=true
# ENABLE_SCREENSHOT_DETECTION=false
# ML_WEIGHT=0.80
# RULE_WEIGHT=0.20
